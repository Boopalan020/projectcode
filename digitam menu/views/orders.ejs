<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order food</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="css/mdb.min.css">
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="css/orders.css">

</head>

<body>

    <div class="container-fluid">
        <div class="float-right p-4">
            <a href="home"> <i class="fa fa-home" aria-hidden="true"></i> <span class="ml-2"> Home </span> </a>
        </div>
        <div class="d-flex justify-content-center p-lg-3">
            <strong class="h3 text-light">Choose Your Food items</strong>
        </div>
    </div>

    <!-- Mwnu views here -->
    <div class="container">

        <form action="/ordernow" method="POST">
            <% var j = 0 %>
            <!-- creates row for every four data -->
            <% for( let i = 0; i < row; i++ ) { %>
            <% var iterate = 0 %>
            <div class="row p-lg-2 p-sm-3">

                <!-- for every card view for every food item -->
                <% for( ; j < res.length; j++ ) { %>
                <div class="col-lg-3 p-2">
                
                    <div class="card">
                        <div class="card-body">

                            <h5 class="card-title text-primary"> 
                                <%= res[j].d_name %>
                                <input type="hidden" value="<%= res[j].d_name %>" name="itemName" id="name<%= j %>" class="text-secondary" disabled>
                            </h5>

                            <p class="card-text text-success">Type of Variety : <strong> <%= res[j].category %>
                            </strong> </p>

                            <!-- onclick="enableTextBox(this.id)" -->
                            <input type="checkbox" value="<%= res[j].price %>" name="itemPrice" onchange ="disableTextBox(this.id)"  id="name<%= j %>" >
                            <span class="text-danger">INR : Rs.<%= res[j].price %></span>
                        </div>

                    </div>

                </div>

                <% if ( iterate == 4) { %>
                <% j = j+1 %>
                <% break %>
                <% } %>
                <% } %>

            </div>
            <% } %>

            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Your Name" name="username" id="username" onblur="validateName()" required>
            </div>
            <div class="mb-4" id="name-error">
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Table Number" name="tablenum" minlength="1" maxlength="2" required>
            </div>

            <div>
                <input type="submit" value="ORDER" class="btn btn-outline-primary">
                <input type="reset" value="RESET" class="btn btn-default">
            </div>

        </form>
    </div>

    <!-- jQuery -->
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="js/mdb.min.js"></script>

    <script src="js/validator.js"></script>

</body>

</html>